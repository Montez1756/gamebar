{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build on Linux",
            // "command": "/bin/g++",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "database.cpp",
                "-I${workspaceFolder}/json/include",
                "-L/usr/lib64",
                "-DQT_NETWORK_LIB",
                "-I/usr/include/qt5/QtNetwork",
                "-I/usr/include/qt5",
                "-DQT_CORE_LIB",
                "-I/usr/include/qt5/QtCore",
                "-lQt5Network",
                "-lQt5Core",
                "-o",
                "gamebar.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "Build on Windows",
            // "command": "/bin/g++",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "database.cpp",
                "-I${workspaceFolder}/json/include",
                "-LC:/msys64/mingw64/lib",
                "-DQT_NETWORK_LIB",
                "-IC:/msys64/mingw64/include/qt5/QtNetwork",
                "-IC:/msys64/mingw64/include/qt5",
                "-DQT_CORE_LIB",
                "-IC:/msys64/mingw64/include/qt5/QtCore",
                "-lQt5Network",
                "-lQt5Core",
                "-o",
                "gamebar.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
    ],
    "version": "2.0.0"
}